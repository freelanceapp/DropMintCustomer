<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.apporio.johnlaundry.MenuModule.MenuActivity">

        <include layout="@layout/action_bar_with_back_btn"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@android:drawable/editbox_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/orderhistory_in_menu_activity">


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/order_history"
                            android:tint="@color/muted_blue"/>

                        <TextView
                            android:id="@+id/orderhistorytext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order History"
                            android:gravity="center|left"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/muted_blue"/>

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/muted_grey"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/settings_in_menu_activity" >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/settings_image"
                            android:tint="@color/muted_blue"/>
                        <TextView
                            android:id="@+id/settingstext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edit Profile"
                            android:gravity="center|left"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/muted_blue"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/muted_grey"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/price_in_menu_activity" >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/usdtag"
                            android:tint="@color/muted_blue"/>
                        <TextView
                            android:id="@+id/pricetext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Price list"
                            android:gravity="center|left"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/muted_blue"/>

                    </LinearLayout>


                    <View
                        android:id="@+id/settingsview"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/muted_grey"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:id="@+id/how_it_works_in_menu_activity"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/help_blue"
                            android:tint="@color/muted_blue"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How it works ?"
                            android:gravity="center|left"
                            android:layout_marginLeft="20dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/button3"
                            android:textColor="@color/muted_blue"/>
                    </LinearLayout>




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/muted_grey"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>





                    <LinearLayout
                        android:id="@+id/faq_in_menu_activity"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/faq"
                            android:tint="@color/muted_blue"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FAQ"
                            android:gravity="center|left"
                            android:layout_marginLeft="20dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/button4"
                            android:textColor="@color/muted_blue"/>


                    </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/muted_grey"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>


                    <LinearLayout
                        android:id="@+id/termsconditions"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/terms_condition"
                            android:tint="@color/muted_blue"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Terms and Conditions"
                            android:gravity="center|left"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/button5"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/muted_blue"/>

                    </LinearLayout>





                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/muted_grey"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>



                    <LinearLayout
                        android:id="@+id/privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/privacy_policy"
                            android:tint="@color/muted_blue"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Privacy Policy"
                            android:gravity="center|left"
                            android:layout_marginLeft="20dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/button6"
                            android:textColor="@color/muted_blue"/>
                    </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/muted_grey"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:id="@+id/keepintouch"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/user_interface"
                            android:tint="@color/muted_blue"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Keep in touch"
                            android:gravity="center|left"
                            android:layout_marginLeft="20dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/button7"
                            android:textColor="@color/muted_blue"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/muted_grey"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"/>

                    <LinearLayout
                        android:id="@+id/signout_from_menu"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/shutdown_blue"
                            android:tint="@color/muted_blue"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sign Out"
                            android:gravity="center|left"
                            android:layout_marginLeft="20dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/signout"
                            android:textColor="@color/muted_blue"/>
                    </LinearLayout>


                </LinearLayout>
        </LinearLayout>
    </ScrollView>







</LinearLayout>
