<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Drop Off Time Slot"
        android:textColor="@color/muted_blue"
        android:id="@+id/textView2"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/muted_blue"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:id="@+id/delivery_time_in_basket_activity"
        android:paddingLeft="10dp"
        android:gravity="center|left"
        >


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/time_icon"
            android:tint="@color/muted_blue"/>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/delivery_time_in_basket_activiy_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="Click to select time"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"
                android:id="@+id/delivery_time_in_basket_activiy_text"
                android:background="@android:color/transparent"
                android:textColor="@color/muted_blue"
                android:textColorHint="@color/muted_grey"/>

        </FrameLayout>

    </LinearLayout>





</LinearLayout>