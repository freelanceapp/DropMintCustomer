        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@android:drawable/edit_text"-->
        <!--android:padding="5dp">-->

        <!--<include layout="@layout/delivery_layout_in_basket"></include>-->

    <!--</LinearLayout>-->

</LinearLayout>